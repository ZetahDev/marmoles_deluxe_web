---
import Layout from "../layouts/Layout.astro";
import ProductCard from "../components/ProductCard.tsx";
import { neolithStones, alteaStones } from "../components/PiedraSinterizada.astro";

interface Stone {
  name: string;
  image: string;
  design: string;
}
---

<Layout title="Piedra Sinterizada - MÃ¡rmoles Deluxe">
  <main class="py-20 pt-24">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-12">
        Piedra Sinterizada
      </h1>
      
      <h2 class="text-3xl font-bold text-center mb-8">Neolith</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {
          neolithStones.map((stone: Stone) => (
            <ProductCard client:load
              name={stone.name}
              description="Piedra sinterizada de alta calidad"
              images={[stone.image, stone.design]}
              features={[
                "Resistente a manchas",
                "Resistente al calor",
                "Bajo mantenimiento",
                "Durabilidad excepcional"
              ]}
            />
          ))
        }
      </div>

      <h2 class="text-3xl font-bold text-center mb-8">Altea</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          alteaStones.map((stone: Stone) => (
            <ProductCard client:load
              name={stone.name}
              description="Piedra sinterizada de alta calidad"
              images={[stone.image, stone.design]}
              features={[
                "Resistente a manchas",
                "Resistente al calor",
                "Bajo mantenimiento",
                "Durabilidad excepcional"
              ]}
            />
          ))
        }
      </div>
    </div>
  </main>
</Layout>
