const penToolIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8"><path d="m12 19 7-7 3 3-7 7-3-3z"></path><path d="m18 13-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"></path><path d="m2 2 7.586 7.586"></path><circle cx="11" cy="11" r="2"></circle></svg>`;

const hardHatIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-8 h-8"><path d="M2 18a1 1 0 0 0 1 1h18a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v2z"></path><path d="M10 10V5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v5"></path><path d="M4 15v-3a6 6 0 0 1 6-6h0"></path><path d="M14 6h0a6 6 0 0 1 6 6v3"></path></svg>`;
---

<Layout title={title} description={description}>
  <Fragment slot="head">
    <!-- SEO Meta Tags -->
    <meta name="keywords" content={keywords} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Mármoles Deluxe" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="es_CO" />
    <meta property="og:site_name" content="Mármoles Deluxe" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Geo Tags -->
    <meta name="geo.region" content="CO-VAC" />
    <meta name="geo.placename" content="Cali" />
    <meta name="geo.position" content="3.4516;-76.5320" />
    <meta name="ICBM" content="3.4516, -76.5320" />
  </Fragment>

  <!-- Agregar datos estructurados schema.org para SEO -->
  <SEOSchemaData
    client:load
    pageTitle={title}
    pageDescription={description}
    pageUrl={pageUrl}
    pageImage={metaImage}
  />

  <PageLoader client:visible isLoading={true} />
  <div class="pt-24 pb-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
      <!-- Encabezado de página -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-marmoles-black mb-4">
          Otros Servicios
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Más allá de la instalación, te acompañamos en todo el ciclo de vida de
          tus superficies.
        </p>
      </div>

      <!-- Servicios Técnicos -->
      <section class="mb-20">
        <div class="flex items-center gap-3 mb-6">
          <div class="text-marmoles-gold">
            <Fragment set:html={settingsIcon} />
          </div>
          <h2 class="text-2xl md:text-3xl font-bold text-marmoles-black">
            Servicios Técnicos y Especializados
          </h2>
        </div>
        <p class="text-gray-600 mb-8 ml-11">
          Soluciones precisas para restaurar, mejorar o adaptar tus superficies
          en piedra.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            technicalServices.map((service) => (
              <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 border border-gray-100">
                <div class="flex items-start gap-4">
                  <div class="bg-marmoles-gold/10 p-3 rounded-full text-marmoles-gold">
                    <Fragment set:html={service.icon} />
                  </div>
                  <div>
                    <h3 class="font-semibold text-lg text-marmoles-black mb-2">
                      {service.title}
                    </h3>
                    {service.description && (
                      <p class="text-gray-600 text-sm">{service.description}</p>
                    )}
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Servicios Creativos -->
      <section class="mb-20">
        <div class="flex items-center gap-3 mb-6">
          <div class="text-marmoles-gold">
            <Fragment set:html={penToolIcon} />
          </div>
          <h2 class="text-2xl md:text-3xl font-bold text-marmoles-black">
            Servicios Creativos y de Diseño
          </h2>
        </div>
        <p class="text-gray-600 mb-8 ml-11">
          Convierte tus ideas en realidad con nuestra experiencia en
          personalización y asesoría.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {
            creativeServices.map((service) => (
              <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 border border-gray-100">
                <div class="flex items-start gap-4">
                  <div class="bg-marmoles-gold/10 p-3 rounded-full text-marmoles-gold">
                    <Fragment set:html={service.icon} />
                  </div>
                  <div>
                    <h3 class="font-semibold text-lg text-marmoles-black mb-2">
                      {service.title}
                    </h3>
                    {service.description && (
                      <p class="text-gray-600 text-sm">{service.description}</p>
                    )}
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Servicios para Construcción -->
      <section class="mb-20">
        <div class="flex items-center gap-3 mb-6">
          <div class="text-marmoles-gold">
            <Fragment set:html={hardHatIcon} />
          </div>
          <h2 class="text-2xl md:text-3xl font-bold text-marmoles-black">
            Servicios para Construcción y Logística
          </h2>
        </div>
        <p class="text-gray-600 mb-8 ml-11">
          Ideal para constructoras, arquitectos o proyectos comerciales.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {
            constructionServices.map((service) => (
              <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 border border-gray-100">
                <div class="flex items-start gap-4">
                  <div class="bg-marmoles-gold/10 p-3 rounded-full text-marmoles-gold">
                    <Fragment set:html={service.icon} />
                  </div>
                  <div>
                    <h3 class="font-semibold text-lg text-marmoles-black mb-2">
                      {service.title}
                    </h3>
                    {service.description && (
                      <p class="text-gray-600 text-sm">{service.description}</p>
                    )}
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </section>

      <!-- CTA -->
      <section class="bg-marmoles-black text-white rounded-xl p-10 text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">
          ¿Tienes un proyecto en mente o una necesidad específica?
        </h2>
        <p class="text-white/80 mb-8 max-w-2xl mx-auto">
          Nuestro equipo de expertos está listo para asesorarte y ofrecerte la
          mejor solución para tu proyecto.
        </p>
        <a
          href="/contactanos"
          class="inline-block bg-marmoles-gold text-marmoles-black font-semibold px-8 py-3 rounded-lg hover:bg-marmoles-gold/90 transition-colors duration-300"
        >
          Contáctanos
        </a>
      </section>
    </div>
  </div>
</Layout>
