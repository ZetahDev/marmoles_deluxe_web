---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm";
import SEOSchemaData from "../components/SEOSchemaData.tsx";

// Metadatos SEO para la página
const metaTitle = "Contáctanos - Mármoles Deluxe | Expertos en Piedras Naturales en Cali";
const metaDescription = "Ponte en contacto con nuestro equipo de expertos en mármoles, granitos y piedras sinterizadas en Cali. ¡Transforma tu espacio con superficies de la más alta calidad!";
const metaImage = "/images/contacto-hero.jpg";
const pageUrl = new URL(Astro.url.pathname, Astro.site).toString();

// Canonical URL (importante para SEO)
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<Layout title={metaTitle}>
  <!-- Agregar metadatos SEO dinámicos -->
  <meta slot="head" name="description" content={metaDescription} />
  <meta slot="head" property="og:title" content={metaTitle} />
  <meta slot="head" property="og:description" content={metaDescription} />
  <meta slot="head" property="og:image" content={metaImage} />
  <meta slot="head" property="og:type" content="website" />
  <meta slot="head" property="og:url" content={pageUrl} />
  <meta slot="head" name="twitter:card" content="summary_large_image" />
  <meta slot="head" name="twitter:title" content={metaTitle} />
  <meta slot="head" name="twitter:description" content={metaDescription} />
  <meta slot="head" name="twitter:image" content={metaImage} />
  <link slot="head" rel="canonical" href={canonicalURL.toString()} />
  
  <!-- Agregar datos estructurados schema.org para SEO -->
  <SEOSchemaData 
    client:load
    pageTitle={metaTitle}
    pageDescription={metaDescription}
    pageUrl={pageUrl}
    pageImage={metaImage}
  />

  <main class="py-20 pt-24">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <header class="text-center mb-12 md:mb-16">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-marmoles-black mb-4">
          Contáctanos
        </h1>
        <p class="text-base sm:text-lg text-gray-600 max-w-3xl mx-auto">
          Estamos listos para convertir tu proyecto en realidad. Contacta con nosotros y recibe asesoría personalizada.
        </p>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
        <!-- Formulario de contacto con EmailJS -->
        <div class="border-l-4 border-marmoles-gold">
          <ContactForm client:load />
        </div>

        <!-- Información de contacto -->
        <div class="bg-white shadow-md p-6 sm:p-8 md:p-10 border-l-4 border-marmoles-gold">
          <h2 class="text-xl sm:text-2xl font-bold text-marmoles-black mb-6">
            Información de Contacto
          </h2>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="text-marmoles-gold mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-marmoles-black mb-1">Dirección</h3>
                <p class="text-gray-700">Cl. 43a Nte. #5N 69, COMUNA 4, Cali, Valle del Cauca</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="text-marmoles-gold mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-marmoles-black mb-1">Teléfono</h3>
                <p class="text-gray-700">+57 313 259 2793</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="text-marmoles-gold mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-marmoles-black mb-1">Email</h3>
                <p class="text-gray-700">info@marmolesdeluxe.com</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="text-marmoles-gold mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-marmoles-black mb-1">Horario</h3>
                <p class="text-gray-700">Lunes a Sábado: 8:00 AM - 6:00 PM</p>
              </div>
            </div>
            
            <div class="pt-4 border-t border-gray-200">
              <h3 class="font-semibold text-marmoles-black mb-3">Síguenos en nuestras redes sociales</h3>
              <div class="flex space-x-4">
                <a href="https://www.instagram.com/marmolesdeluxe/" target="_blank" rel="noopener noreferrer" class="text-marmoles-gold hover:text-marmoles-gold/80 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
                <a href="https://www.facebook.com/Marmolesdeluxe" target="_blank" rel="noopener noreferrer" class="text-marmoles-gold hover:text-marmoles-gold/80 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Mapa -->
      <section class="py-20 bg-marmoles-white">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
            Nuestra Ubicación
          </h2>
          <div class="w-full h-96 rounded-lg overflow-hidden shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3982.6549444444444!2d-76.53333333333333!3d3.433333333333333!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e30a6c7c5c5c5c5%3A0x5c5c5c5c5c5c5c5c!2sCl.%2043a%20Nte.%20%235N%2069%2C%20COMUNA%204%2C%20Cali%2C%20Valle%20del%20Cauca!5e0!3m2!1ses!2sco!4v1620000000000!5m2!1ses!2sco"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            >
            </iframe>
          </div>
          <div class="mt-8 text-center">
            <p class="text-lg font-medium">Visítanos en nuestra sede principal</p>
            <p class="text-marmoles-gold">
              Cl. 43a Nte. #5N 69, COMUNA 4, Cali, Valle del Cauca
            </p>
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  iframe {
    border-radius: 0.25rem;
  }
</style> 