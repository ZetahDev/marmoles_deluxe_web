const projects = [
  {
    title: "Cocina Moderna",
    description: "Diseño contemporáneo con mármol de alta calidad",
    image:
      "https://images.unsplash.com/photo-1556911220-bff31c812dba?q=80&w=1000",
  },
  {
    title: "Baño de Lujo",
    description: "Acabados premium en mármol natural",
    image:
