---
import Layout from "../layouts/Layout.astro";
import SEOSchemaData from "../components/SEOSchemaData.tsx";
import { fetchAllDesignImages } from "../lib/utils/s3Utils";

const title =
  "Galer√≠a de Proyectos - M√°rmoles Deluxe | Inspiraci√≥n en Gran Formato";
const description =
  "Explora nuestra galer√≠a de proyectos y dise√±os realizados con m√°rmol, granito y piedra sinterizada. Insp√≠rate para tu pr√≥xima obra con M√°rmoles Deluxe.";

const keywords =
  "galer√≠a m√°rmol, fotos proyectos granito, dise√±o interiores cocina, ba√±os lujo, encimeras cali, inspiraci√≥n piedra sinterizada";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const pageUrl = canonicalURL.toString();
const metaImage = new URL("/images/proyectos-og.jpg", Astro.site).toString(); // Ensure this image exists or use a fallback

// Fetch all images tagged as 'design' from S3
const galleryImages = await fetchAllDesignImages();
---

<Layout title={title} description={description}>
  <Fragment slot="head">
    <!-- SEO Meta Tags -->
    <meta name="keywords" content={keywords} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={metaImage} />

    <!-- Geo Tags -->
    <meta name="geo.region" content="CO-VAC" />
    <meta name="geo.placename" content="Cali" />
  </Fragment>

  <SEOSchemaData
    client:load
    pageTitle={title}
    pageDescription={description}
    pageUrl={pageUrl}
    pageImage={metaImage}
  />

  <main class="pt-24 pb-16 min-h-screen bg-gray-50">
    <!-- Header -->
    <section class="container mx-auto px-4 mb-12 text-center">
      <h1
        class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-marmoles-gold to-marmoles-black mb-4"
      >
        Galer√≠a de Inspiraci√≥n
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Descubre c√≥mo nuestros materiales transforman espacios. Una colecci√≥n
        curada de texturas y dise√±os aplicados.
      </p>
    </section>

    <!-- Masonry Gallery -->
    <section class="container mx-auto px-4">
      {
        galleryImages.length > 0 ? (
          <div class="masonry-grid">
            {galleryImages.map((img) => (
              <div class="masonry-item mb-4 break-inside-avoid">
                <div class="group relative overflow-hidden rounded-xl bg-white shadow-md hover:shadow-xl transition-all duration-300">
                  <img
                    src={img.url}
                    alt={`Dise√±o con ${img.name} - ${img.category}`}
                    class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-4">
                    <span class="text-marmoles-gold text-xs font-bold uppercase tracking-wider mb-1">
                      {img.category}
                    </span>
                    <h3 class="text-white font-semibold text-lg leading-tight">
                      {img.name}
                    </h3>
                  </div>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="flex flex-col items-center justify-center py-20 text-center">
            <div class="text-6xl mb-4">üñºÔ∏è</div>
            <h3 class="text-2xl font-bold text-gray-400">
              Cargando inspiraci√≥n...
            </h3>
            <p class="text-gray-500 mt-2">
              Estamos recuperando las mejores im√°genes para ti.
            </p>
          </div>
        )
      }
    </section>
  </main>
</Layout>

<style>
  /* CSS Columns Masonry Layout - The "Pinterest" Style without JS */
  .masonry-grid {
    column-count: 1;
    column-gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .masonry-grid {
      column-count: 2;
    }
  }

  @media (min-width: 1024px) {
    .masonry-grid {
      column-count: 3;
    }
  }

  @media (min-width: 1280px) {
    .masonry-grid {
      column-count: 4;
    }
  }

  /* Prevent elements from breaking across columns */
  .masonry-item {
    break-inside: avoid;
    -webkit-column-break-inside: avoid;
  }
</style>
